<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/taskbar"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="100dp"
                android:src="@drawable/fotoku"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.103" />

            <TextView
                android:id="@+id/namaku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/circleImageView"
                android:paddingLeft="10dp"
                android:text="xxxxxx"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namaku"
                android:layout_toRightOf="@id/circleImageView"
                android:paddingLeft="10dp"
                android:text="xxxxx"
                android:textColor="@color/black"
                android:textSize="25dp" />




        </RelativeLayout>

    </LinearLayout>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Aplikasi Entry Kartu Hasil Studi"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="130dp"
            android:background="@drawable/frame"
            android:orientation="vertical"
            android:layout_height="160dp"
            android:layout_margin="4dp"
            android:gravity="center">

            <Button
                android:id="@+id/entry"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/entry"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground" />
            <TextView
                android:layout_width="match_parent"
                android:text="Entry"
                android:layout_marginTop="2dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:background="@drawable/frame"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_height="160dp">
            <Button
                android:layout_width="80dp"
                android:id="@+id/tampil"
                android:background="@drawable/tampil"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_height="80dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Tampil"
                android:layout_marginTop="2dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="130dp"
                android:background="@drawable/frame"
                android:orientation="vertical"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:gravity="center">

                <Button
                    android:layout_width="80dp"
                    android:id="@+id/cetak"
                    android:layout_height="80dp"
                    android:background="@drawable/cetak"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="cetak"
                    android:layout_marginTop="2dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:background="@drawable/frame"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:layout_height="160dp">
                <Button
                    android:layout_width="80dp"
                    android:id="@+id/laporan"
                    android:background="@drawable/laporan"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="laporan"
                    android:layout_marginTop="2dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="130dp"
                android:background="@drawable/frame"
                android:orientation="vertical"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:gravity="center">

                <Button
                    android:layout_width="80dp"
                    android:id="@+id/tentang"
                    android:layout_height="80dp"
                    android:background="@drawable/tentang"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="Tentang"
                    android:layout_marginTop="2dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:background="@drawable/frame"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:layout_height="160dp">
                <Button
                    android:layout_width="80dp"
                    android:id="@+id/keluar"
                    android:background="@drawable/logout1"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Keluar"
                    android:layout_marginTop="2dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>






    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/bluesky"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="Fakultas Ilmu Komputer"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Teknik Informatika - S1"
        android:gravity="center"
        android:textSize="15dp"
        android:background="@color/bluesky"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

</LinearLayout>


